{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "echo 'Using nixpacks.toml for build'"
  },
  "deploy": {
    "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT --workers 2 --threads 4 --timeout 120 --keep-alive 5 --access-logfile - --error-logfile - --log-level info",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "region": "us-west1"
  },
  "environments": {
    "production": {
      "deploy": {
        "replicas": 1,
        "restartPolicyType": "ALWAYS"
      }
    }
  }
}